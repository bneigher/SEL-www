<head>
  <title>SEL In Chicago</title>
</head>

{{#extend "html/template"}}
{{#content "body"}}
{{> partials/nav }}
{{!-- <h1>{{site.index.title}}</h1> --}}
<main>
  <!-- ./Page header -->
  <header class="header section overlay gradient gradient-purple-blue alpha-8 text-contrast image-background cover"
    style="background-image: url(img/waves.jpg)">

    <div class="container bring-to-front">
      <div class="row gap-y align-items-center">
        <div class="col-md-6">
          <div id="map" style="top:100px; bottom:0; max-width: 610px; width: 100%; height: 350px;"></div>
        </div>
        <div class="col-md-6 ml-md-auto text-center text-md-left">

          <h2 class="light text-contrast mt-3">Let's get started</h2>
          <p class="text-contrast lead">
            Build a more equitable classroom environment with tools made by Chicago public school teachers for teachers. Create safe, responsive, reflective, and uplifting classroom spaces for our
            students who need it most. Click the stars below to download the Teacher Materials!
          </p>
          <div>

            {{#each materials.data}}

            <div class="col-md-12" style="display: inline-block; width: 70px;">


              <a href="{{page}}" class="shadow-hover" style="width: 100%; height: 100%; display:block;">
                <div class="">
                  <i data-feather="star" stroke="red" fill="red" width="50" height="50" class="text-info mb-2"></i>
                  <span
                    style="color:rgb(241, 213, 213); font-weight: bold; position: absolute; top: 13px; left: 34px; font-size: 17px; width: 10px; text-align: center;">
                    {{id}}
                  </span>
                </div>
                
              </a>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- ./Features - grid -->
  <section id="features" class="section  bg-contrast">
    <div class="container pb-5">
      <div class="row gap-y text-center text-md-left">
        {{#each studies.data}}
        <div class="col-md-4 py-4 rounded shadow-hover">
          <a href="{{page}}" style="width: 100%; height: 100%; display:block;">
            <!-- <i data-feather="{{icon}}" width="36" height="36" class="text-info mb-2"></i> -->
            <img width="200"
              src="{{image}}" />
            <h5 class="bold">{{title}}</h5>
            <p class="text-secondary">{{header}}</p>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
  {{> partials/footer }}

</main>
{{/content}}
{{/extend}}